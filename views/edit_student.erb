<html>
  <head>
    <title>Edit Student</title>

    <link href="/style.css" rel='stylesheet', type='text/css'>
    <title><%= @title || "Student Information System"%></title>
  </head>
  
  <body>
        <h2>Student Information System</h2>
  <br>
  <br>
      <ul>
          <li><a href='/'>Home</a></li>
          <li><a href='/about'>About</a></li>
          <li><a href='/contact'>Contact</a></li>
          <li><a href='/students'>Students</a></li>
          <li><a href='/comments'>Comment</a></li>
          <li><a href='/video'>Video</a></li>
          <li><a href='/logout'>Logout</a></li>
      </ul>
  <br>
  <br>

    <div>
    <br>
    <br>

      <form align="center" method="post" action="/students/<%= @student.student_id %>">


            <input type="hidden" name="_method" value="post">

            <label for="FirstName">First Name:</label><input type="text" id="FirstName" name="stud[FirstName]" value=<%= @student.FirstName%>>
            <br>
            <br>

            <label for="LastName">Last Name:</label><input type="text" id="LastName" name="stud[LastName]" value=<%= @student.LastName %>>
            <br>
            <br>

            <label for="Address">Address:</label><input type="text" id="Address" name="stud[Address]" value=<%= @student.Address %>>
            <br>
            <br>

            <label for="DateOfBirth">Date of Birth:</label><input type="date" id="Address" name="stud[DateOfBirth]" value=<%= @student.DateOfBirth %>>
            <br>
            <br>

            <input type="submit" name="Update" value="Update">
      </form>
    </div>
    <form method="get" action="/students"><button type="submit">Back</button></form>
  </body>
</html>